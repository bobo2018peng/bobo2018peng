<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.crm.mapper.Userdao.java">
	<!--注意sql语句没有分号结尾  -->
	<insert id="addUser" parameterType="User">
		insert into t_user(id,username,password,truename,lianxifangshi) values(#{id},#{username},#{password},#{truename},#{lianxifangshi})
	</insert>
	<!--注意这里的参数类型是parameterType而不是parameterMap，因为返回的是单个类型  -->
	<select id="findUserByNameAndPwd"  parameterType="map"  resultType="User">
		select t.username,t.password from t_user t where username=#{username} and password=#{password}
	</select>
</mapper>